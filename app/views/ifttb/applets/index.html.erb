<div class="pt-4">
  <div class="text-center mb-4">
    You have created <%= current_user.applets.count %>/3 applets.
  </div>
</div>

<% content_for :navbar do %>
  <div class="h-12 px-4 py-2 text-xl font-bold text-white bg-neutral">
    <div class="mx-auto max-w-screen-lg">
      IFTT<span class='text-2xl text-btc'>â‚¿</span>
    </div>
  </div>
<% end %>

<% if current_user.present? %>
  <% content_for :tabbar do %>
    <div class="flex items-center justify-around p-4 mx-auto max-w-screen-lg">
      <% if current_user.may_create_applet? %>
        <%= link_to t('create'), new_ifttb_applet_path, class: 'btn btn-primary btn-sm rounded-full' %>
      <% else %>
        <%= link_to t('upgrade_pro'), new_ifttb_order_path, class: 'btn btn-primary btn-sm rounded-full' %>
      <% end %>

      <label for="menu" class="btn btn-primary btn-sm rounded-full">
        <%= inline_svg_tag "icons/bars.svg", class: "w-7 h-7 rounded-full" %>
      </label>
    </div>

    <input type="checkbox" id="menu" class="modal-toggle" />
    <label for='menu' class="modal modal-bottom sm:modal-middle cursor-pointer">
      <label class="modal-box relative" for="">
        <%= link_to t('wallet'), ifttb_wallet_path, class: 'btn btn-block btn-outline rounded-full mb-4' %>
        <%= link_to t('stats'), ifttb_stats_path, class: 'btn btn-block btn-outline rounded-full mb-4' %>
        <%= link_to t('archived_applets'), ifttb_stats_path, class: 'btn btn-block btn-outline rounded-full mb-4' %>
      </label>
    </label>
  <% end %>
<% end %>
